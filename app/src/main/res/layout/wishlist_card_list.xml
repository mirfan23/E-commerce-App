<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            tools:src="@drawable/thumbnail_store" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppins_regular"
                tools:text="@string/item_name" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_medium"
                tools:text="Rp23.499.000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_account" />

                <TextView
                    android:id="@+id/tv_uploader"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginHorizontal="2dp"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingExtra="1sp"
                    android:textSize="12dp"
                    tools:text="ProStoreComputer" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rating"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/gridRating"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginHorizontal="2dp"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingExtra="1sp"
                    android:textSize="12dp"
                    tools:text="5.0 | Terjual 10" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_below="@id/linear_item">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingStart="6dp"
                app:cornerRadius="10dp"
                app:icon="@drawable/ic_delete"
                android:layout_marginEnd="5dp"
                app:iconSize="28dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_cart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                tools:text="@string/cart"/>

        </LinearLayout>
    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>
