<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.HomeFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_home"
        android:layout_width="306dp"
        android:layout_height="282dp"
        android:layout_marginStart="82dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        app:lottie_rawRes="@raw/dashboard_animation"
        app:lottie_autoPlay="true"/>

    <Button
        android:id="@+id/button_logout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/lottie_home"
        android:layout_marginStart="135dp"
        android:layout_marginTop="50dp"
        android:text="Logout"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="EN"
        android:textSize="14sp"
        android:letterSpacing="0.02"
        android:layout_alignParentTop="true"
        android:layout_marginTop="420dp"
        android:layout_marginStart="130dp"
        />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switch_language"
        android:layout_width="52dp"
        android:layout_height="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="155dp"
        android:layout_below="@id/button_logout"
        android:gravity="center_vertical|center_horizontal"
        />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="ID"
        android:textSize="14sp"
        android:letterSpacing="0.02"
        android:layout_alignParentTop="true"
        android:layout_marginTop="420dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="120dp"
        />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="Light"
        android:textSize="14sp"
        android:letterSpacing="0.02"
        android:layout_alignParentTop="true"
        android:layout_marginTop="480dp"
        android:layout_marginStart="117dp"
        />


    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switch_theme"
        android:layout_width="52dp"
        android:layout_height="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="155dp"
        android:layout_below="@id/switch_language"
        android:gravity="center_vertical|center_horizontal"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="Dark"
        android:textSize="14sp"
        android:letterSpacing="0.02"
        android:layout_alignParentTop="true"
        android:layout_marginTop="480dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="120dp"
        />

</RelativeLayout>