<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.others.PaymentFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_payment"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_payment"
                style="@style/headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:iconTint="?attr/colorControlNormal"
                app:navigationIcon="@drawable/ic_arrow_back"
                tools:title="@string/detail_product">

            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/payment_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/appbar_payment"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_item_payment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/payment_divider"
            tools:listitem="@layout/payment_list"/>

    </RelativeLayout>

</FrameLayout>